
                  <div class="file-upload-wrapper">
    <div x-data="{ files: null }" id="FileUpload" class="file-upload__bg">
        <input type="file" multiple
               class="file-upload__input"
               x-on:change="files = $event.target.files; console.log($event.target.files);"
               x-on:dragover="$el.classList.add('active')" x-on:dragleave="$el.classList.remove('active')" x-on:drop="$el.classList.remove('active')"
        >
        <div x-if="files !== null">
            <div class="columns">
                <div x-for="(_,index) in Array.from({ length: files.length })">
                    <div class="rows">
                        <div x-if="files[index].type.includes('audio/')"><i class="far fa-file-audio fa-fw"></i></div>
                        <div x-if="files[index].type.includes('application/')"><i class="far fa-file-alt fa-fw"></i></div>
                        <div x-if="files[index].type.includes('image/')"><i class="far fa-file-image fa-fw"></i></div>
                        <div x-if="files[index].type.includes('video/')"><i class="far fa-file-video fa-fw"></i></div>
                        <span data-index="inde">x</span>
                        <span class="font-medium text-gray-900" x-text="files[index].name">Uploading</span>
                        <span class="text-xs self-end text-gray-500" x-text="files[index].size">...</span>
                    </div>
                </div>
            </div>
        </div>
        <div x-if="files === null">
            <div class="empty-cols">
                <i class="fas fa-cloud-upload-alt fa-3x text-currentColor"></i>
                <p class="text-gray-700">Drag your files here or click in this area.</p>
                <a href="javascript:void(0)" class="file-select__btn">Select a file</a>
            </div>
        </div>
    </div>
</div>

